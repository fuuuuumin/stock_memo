<%= render "shared/header" %>
<div class='main'>
  <div class="wrapper">
    <div class='search-contents'>
      <div class="search-box">
          <input type="text" placeholder="検索ワード">
          <button type="submit">
              <i class="fas fa-search fa-fw"></i>
          </button>
      </div>
      <%= link_to '古い順', items_path(old: "true") %>
      <%= link_to '新しい順', items_path(latest: "true") %>
      <%= link_to '期限の近い順', items_path(deadline: "true") %>
    </div>
    <div class='item-contents'>
      <table>
        <tr>
          <th>名前</th><th>個数</th><th>期限</th>
        </tr>
        <% @items.each do |item| %>
          <tr>
            <td><%= link_to item.name, item_path(item.id), method: :get %></td><td><%= item.number %></td><td><%= item.deadline %></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>